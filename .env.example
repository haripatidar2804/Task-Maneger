# Required TursoDB credentials
# Connection URL for the project-specific TursoDB instance
TURSO_DATABASE_URL=libsql://your-project-db-name.turso.io
# Authentication token for the TursoDB instance
TURSO_AUTH_TOKEN=your_turso_auth_token_here

# Logging configuration
# Log level controls verbosity of application logs
# Values: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO
# Controls whether database queries are logged
# Values: true, false
DB_LOGGING_ENABLED=false

# Context retrieval configuration
# Default token budget for context retrieval
DEFAULT_TOKEN_BUDGET=4000
# Rate for importance score decay of context items
CONTEXT_DECAY_RATE=0.95
# Interval in milliseconds between score decay operations
CONTEXT_DECAY_INTERVAL_MS=3600000
# Maximum number of items to keep in cache
MAX_CACHE_SIZE=1000
